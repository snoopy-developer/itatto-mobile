{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@screens/*": [
        "./screens/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./declarations.d.ts"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "lang/i18n.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
